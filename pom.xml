<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.citytechinc.cqlibrary</groupId>
    <artifactId>groovyconsole</artifactId>
    <packaging>jar</packaging>
    <version>1.2-SNAPSHOT</version>
    <name>cq5-groovy-console</name>

    <scm>
        <connection>scm:git:git@github.com:Citytechinc/cq5-groovy-console.git</connection>
        <developerConnection>scm:git:git@github.com:Citytechinc/cq5-groovy-console.git</developerConnection>
        <url>https://github.com/Citytechinc/cq5-groovy-console</url>
    </scm>

    <properties>
        <maven.test.skip>true</maven.test.skip>
        <bundles.dir>${project.build.directory}/classes</bundles.dir>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <!-- dependency versions -->
        <slf4j.version>1.5.2</slf4j.version>
        <groovy.version>1.8.0</groovy.version>
        <jcr.version>2.0</jcr.version>
        <cq.version>5.4.0</cq.version>
        <sling.api.version>2.2.0</sling.api.version>

        <!-- plugin versions -->
        <sling.plugin.version>2.0.4-incubator</sling.plugin.version>
        <compiler.plugin.version>2.3.2</compiler.plugin.version>
        <exec.plugin.version>1.2</exec.plugin.version>
        <xml.plugin.version>1.0</xml.plugin.version>
        <assembly.plugin.version>2.2.1</assembly.plugin.version>

        <!-- install -->
        <sling.url>http://${sling.host}:${sling.port}/system/console/install</sling.url>
        <packagemanager.url>http://${sling.host}:${sling.port}/crx/packmgr/service.jsp</packagemanager.url>
    </properties>

    <dependencies>
        <dependency>
            <groupId>javax.jcr</groupId>
            <artifactId>jcr</artifactId>
            <version>${jcr.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.day.cq.wcm</groupId>
            <artifactId>cq-wcm-api</artifactId>
            <version>${cq.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.sling</groupId>
            <artifactId>org.apache.sling.api</artifactId>
            <version>${sling.api.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${slf4j.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy-all</artifactId>
            <version>${groovy.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>filter-windows</id>
            <activation>
                <os>
                    <family>windows</family>
                </os>
            </activation>
            <properties>
                <exec.executable>deploy.bat</exec.executable>
            </properties>
        </profile>
        <profile>
            <id>filter-mac</id>
            <activation>
                <os>
                    <family>mac</family>
                </os>
            </activation>
            <properties>
                <exec.executable>deploy.sh</exec.executable>
            </properties>
        </profile>
        <profile>
            <id>filter-unix</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            <properties>
                <exec.executable>deploy.sh</exec.executable>
            </properties>
        </profile>

        <profile>
            <id>local-author</id>
            <activation>
                <property>
                    <name>local-author</name>
                </property>
            </activation>
            <properties>
                <sling.host>localhost</sling.host>
                <sling.port>4502</sling.port>
                <sling.user>admin</sling.user>
                <sling.password>admin</sling.password>
            </properties>
        </profile>
        <profile>
            <id>local-publish</id>
            <activation>
                <property>
                    <name>local-publish</name>
                </property>
            </activation>
            <properties>
                <sling.host>localhost</sling.host>
                <sling.port>4503</sling.port>
                <sling.user>admin</sling.user>
                <sling.password>admin</sling.password>
            </properties>
        </profile>

        <profile>
            <id>install-groovy</id>
            <activation>
                <property>
                    <name>install-groovy</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-dependencies</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy-dependencies</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${bundles.dir}</outputDirectory>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                    <excludeTransitive>true</excludeTransitive>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.sling</groupId>
                        <artifactId>maven-sling-plugin</artifactId>
                        <version>${sling.plugin.version}</version>
                        <executions>
                            <execution>
                                <id>install-groovy</id>
                                <goals>
                                    <goal>install</goal>
                                </goals>
                                <configuration>
                                    <bundleFileName>
                                        ${bundles.dir}/groovy-all-${groovy.version}.jar </bundleFileName>
                                    <slingUrl>${sling.url}</slingUrl>
                                    <user>${sling.user}</user>
                                    <password>${sling.password}</password>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>install-console</id>
            <activation>
                <property>
                    <name>install-console</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.sling</groupId>
                        <artifactId>maven-sling-plugin</artifactId>
                        <version>${sling.plugin.version}</version>
                        <executions>
                            <execution>
                                <id>validate-install-console</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>validate</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>${exec.plugin.version}</version>
                        <executions>
                            <execution>
                                <id>exec-install-console</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <arguments>
                                        <argument>target/${project.artifactId}-${project.version}.zip</argument>
                                        <argument>${project.artifactId}-${project.version}</argument>
                                        <argument>${packagemanager.url}</argument>
                                        <argument>${sling.user}</argument>
                                        <argument>${sling.password}</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <resources>
            <resource>
                <directory>${basedir}/src/main/content/META-INF</directory>
                <targetPath>META-INF</targetPath>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>${basedir}/src/main/content/jcr_root</directory>
                <excludes>
                    <exclude>**/.vlt</exclude>
                    <exclude>**/.vltignore</exclude>
                    <exclude>**/.DS_Store</exclude>
                </excludes>
                <targetPath>jcr_root</targetPath>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>xml-maven-plugin</artifactId>
                <version>${xml.plugin.version}</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>validate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <validationSets>
                        <validationSet>
                            <dir>src/main/content/jcr_root</dir>
                            <includes>
                                <include>**/*.xml</include>
                            </includes>
                        </validationSet>
                    </validationSets>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>${assembly.plugin.version}</version>
                <configuration>
                    <appendAssemblyId>false</appendAssemblyId>
                    <descriptors>
                        <descriptor>src/main/resources/assemblies/zip.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>